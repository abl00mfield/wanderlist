<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select a Photo</title>
</head>

<body>
  <h1>Select a Photo for Your Destination</h1>

  <% if (photos.length === 0) { %>
  <p>No photos found. Try another search.</p>
  <% } else { %>
  <form action="/destinations/<%= destinationId %>/add-photo" method="POST">
    <% photos.forEach(photo => { %>
    <label>
      <input type="radio" name="photoUrl" value="<%= photo.url %>" required>
      <img src="<%= photo.url %>" alt="Unsplash Photo" width="300">
    </label>
    <% }); %>
    <br>
    <button type="submit">Add Photo</button>
  </form>
  <% } %>

  <br><a href="/destinations/<%= destinationId %>">Back to Destination</a>
</body>

</html>