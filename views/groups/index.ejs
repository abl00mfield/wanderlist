<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Groups</title>
</head>

<body>
  <%- include("../partials/_navbar.ejs") %>
  <div class="group-list-container">
    <h1>All Groups</h1>
    <% if (groups.length > 0) { %>
    <ul>
      <% groups.forEach(group => { %>
      <li>
        <a href="/groups/<%= group._id %>"><strong><%= group.name %></strong> - created by <%=group.owner.username %></a>
        <% if (!group.members.includes(userId)) { %>
        <form class="join-group" action="/groups/<%= group._id %>/join?_method=PATCH" method="POST">
          <button type="submit">Join Group</button>
        </form>
        <% } else { %>
        <span class="joined-label">(Already a member)</span>
        <% } %>

      </li>

      <% }) %>
    </ul>
    <% }  else { %>
    <p>No groups have been created</p>

    <% } %>
    <a href="/groups/new">Create A New Group</a>
  </div>

</body>

</html>